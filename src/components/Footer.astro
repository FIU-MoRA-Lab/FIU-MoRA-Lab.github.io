---
import { Image } from "astro:assets";
import fiuBlack from "../assets/img/fiu/fiu-black.png";
import fiuWhite from "../assets/img/fiu/fiu-white.png";

const currentYear = new Date().getFullYear();
---

<footer
    class="bg-[var(--color-bg-primary)] mt-auto dark:bg-neutral-900 transition-colors duration-300"
>
    <!-- Squiggly Divider -->
    <div class="w-full px-6 md:px-12 lg:px-20 max-w-6xl mx-auto">
        <div class="squiggle-separator w-full h-[6px]"></div>
    </div>

    <div
        class="container mx-auto px-6 md:px-12 lg:px-20 py-12 md:py-16 lg:py-20 max-w-6xl"
    >
        <div
            class="grid grid-cols-1 lg:grid-cols-4 gap-8 md:gap-10 lg:gap-12 text-center md:text-left"
        >
            <!-- Brand & Navigation -->
            <div class="col-span-1 lg:col-span-1 space-y-4 md:space-y-4">
                <div>
                    <a
                        href="https://www.fiu.edu/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="block w-fit mx-auto md:mx-0"
                    >
                        <!-- Light Mode Logo - Smaller on mobile -->
                        <Image
                            src={fiuBlack}
                            alt="Florida International University"
                            class="h-8 md:h-10 mb-4 block dark:hidden w-auto"
                        />
                        <!-- Dark Mode Logo - Smaller on mobile -->
                        <Image
                            src={fiuWhite}
                            alt="Florida International University"
                            class="h-8 md:h-10 mb-4 hidden dark:block w-auto"
                        />
                    </a>

                    <p class="text-xs text-gray-500 mt-1 dark:text-neutral-400">
                        Florida International University
                    </p>

                    <p class="text-xs text-gray-500 mt-1 dark:text-neutral-400">
                        Motion Robotics and Automation Lab
                    </p>
                </div>
            </div>

            <!-- Locations - Hidden on mobile -->
            <div
                class="col-span-1 lg:col-span-3 hidden md:grid md:grid-cols-2 gap-8 md:gap-10 text-left"
            >
                <!-- MMC -->
                <div>
                    <h4 class="font-medium text-gray-900 mb-3 dark:text-white">
                        Modesto A. Maidique Campus
                    </h4>
                    <address
                        class="not-italic text-xs text-gray-500 space-y-1 dark:text-neutral-400"
                    >
                        <p>11200 SW 8th Street</p>
                        <p>CASE 244</p>
                        <p>Miami, FL 33199</p>
                    </address>
                </div>

                <!-- BBC -->
                <div>
                    <h4 class="font-medium text-gray-900 mb-3 dark:text-white">
                        Biscayne Bay Campus
                    </h4>
                    <address
                        class="not-italic text-xs text-gray-500 space-y-1 dark:text-neutral-400"
                    >
                        <p>3000 NE 151st Street</p>
                        <p>AC1 384</p>
                        <p>North Miami, FL 33181</p>
                    </address>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    .squiggle-separator {
        background-color: var(--color-highlight);
        -webkit-mask-image: url("data:image/svg+xml,%3Csvg width='24' height='6' viewBox='0 0 24 6' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M 0 3 Q 6 0 12 3 T 24 3' stroke='white' stroke-width='1' fill='none'/%3E%3C/svg%3E");
        mask-image: url("data:image/svg+xml,%3Csvg width='24' height='6' viewBox='0 0 24 6' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M 0 3 Q 6 0 12 3 T 24 3' stroke='white' stroke-width='1' fill='none'/%3E%3C/svg%3E");
        -webkit-mask-repeat: repeat-x;
        mask-repeat: repeat-x;
        -webkit-mask-size: 24px 6px;
        mask-size: 24px 6px;
    }
</style>
