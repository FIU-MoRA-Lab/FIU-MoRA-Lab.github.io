---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<section class="mb-20">
    <h2
        class="text-2xl font-medium tracking-tight border-b border-gray-300 dark:border-neutral-700 pb-4 mb-8 text-black dark:text-white"
    >
        {title}
    </h2>
    <slot />
</section>
