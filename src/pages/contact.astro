---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import Section from "../components/Section.astro";
---

<Layout>
    <div class="min-h-screen">
        <div
            class="container mx-auto px-4 pt-4 pb-8 md:pt-8 md:pb-16 max-w-4xl"
        >
            <PageHeader title="Contact" />

            <!-- Join Us Section -->
            <Section title="Join Us">
                <div
                    class="prose text-gray-800 dark:text-gray-200 font-light leading-relaxed space-y-6 md:space-y-8"
                >
                    <p>
                        <span
                            class="font-medium text-black dark:text-white block mb-2"
                            >Undergraduate Students</span
                        >
                        Please <a
                            href="mailto:bobadilla@cs.fiu.edu"
                            class="no-underline text-black dark:text-white border-b border-black dark:border-white hover:border-gray-600 dark:hover:border-gray-300 transition-colors"
                            >send an email to Prof. Bobadilla</a
                        > with a brief statement of interest and your curriculum vitae
                        attached as a PDF document.
                    </p>

                    <p>
                        <span
                            class="font-medium text-black dark:text-white block mb-2"
                            >Graduate Students</span
                        >
                        Please <a
                            href="mailto:bobadilla@cs.fiu.edu"
                            class="no-underline text-black dark:text-white border-b border-black dark:border-white hover:border-gray-600 dark:hover:border-gray-300 transition-colors"
                            >send an email to Prof. Bobadilla</a
                        > with a brief statement of interest and your application
                        package (curriculum vitae and statement of purpose) attached
                        as a single PDF document. We are primarily interested in students
                        who would like to obtain a PhD.
                    </p>
                </div>
            </Section>

            <!-- Grid for Facilities -->
            <Section title="Visit Our Facilities">
                <div
                    class="prose text-gray-800 dark:text-gray-200 font-light leading-relaxed mb-8 md:mb-12"
                >
                    <p>
                        We maintain facilities at FIU main campuses for
                        experimental work. If you would like a tour of these
                        facilities, please <a
                            href="mailto:bobadilla@cs.fiu.edu"
                            class="no-underline text-black dark:text-white border-b border-black dark:border-white hover:border-gray-600 dark:hover:border-gray-300 transition-colors"
                            >send an email to Prof. Bobadilla</a
                        >.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
                    <!-- MMC Map -->
                    <div class="space-y-3 md:space-y-4">
                        <h3
                            class="text-base md:text-lg font-medium text-black dark:text-white"
                        >
                            MoRA Lab @ FIU Modesto A. Maidique Campus
                        </h3>
                        <div
                            class="aspect-square w-full bg-gray-100 rounded-lg overflow-hidden shadow-sm"
                        >
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3593.284729352726!2d-80.37688268498964!3d25.756281983637175!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9b9d0b5b5b5b5%3A0x5b5b5b5b5b5b5b5b!2sFlorida%20International%20University!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                class="w-full h-full grayscale hover:grayscale-0 transition-all duration-500"
                                title="Map of FIU MMC"></iframe>
                        </div>
                    </div>

                    <!-- BBC Map -->
                    <div class="space-y-3 md:space-y-4">
                        <h3
                            class="text-base md:text-lg font-medium text-black dark:text-white"
                        >
                            MoRA Lab @ FIU Biscayne Bay Campus
                        </h3>
                        <div
                            class="aspect-square w-full bg-gray-100 rounded-lg overflow-hidden shadow-sm"
                        >
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3586.366723456789!2d-80.14986768498964!3d25.914234983637175!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9ad7b5b5b5b5b%3A0x5b5b5b5b5b5b5b5b!2sFlorida%20International%20University%20-%20Biscayne%20Bay%20Campus!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                class="w-full h-full grayscale hover:grayscale-0 transition-all duration-500"
                                title="Map of FIU BBC"></iframe>
                        </div>
                    </div>
                </div>
            </Section>
        </div>
    </div>
</Layout>
